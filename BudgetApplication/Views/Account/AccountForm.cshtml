@model BudgetApplication.ViewModels.NewAccountViewModel

@{
    ViewBag.Title = "New Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Account Form</h2>

@using (Html.BeginForm("SaveAccount", "Account", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(m => m.Account.AccountName)
    @Html.TextBoxFor(m => m.Account.AccountName, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Account.AccountName)
</div>

    <div class="form-group">
        @Html.LabelFor(m => m.Account.AccountTypeId)
        @Html.DropDownListFor(
            m => m.Account.AccountTypeId,
            new SelectList(Model.AccountTypes,
            "AccountTypeId", "AccountTypeName"),
            "Select Account Type",
            new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Account.AccountTypeId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Account.Balance)
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            @Html.TextBoxFor(m => m.Account.Balance, "{0:#.#}", new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(m => m.Account.Balance)
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
