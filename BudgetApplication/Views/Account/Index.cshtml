@model List<BudgetApplication.Models.Account>

@{
    ViewBag.Title = "Accounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Accounts</h2>

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Account Name</th>
                <th>Type</th>
                <th>Balance</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var account in Model)
            {
                <tr>
                    <td>@account.AccountName</td>
                    <td>@account.AccountType.AccountTypeName</td>
                    <td>@account.Balance</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts
{
    <script>
        var testData = 'MyData';
    </script>

    <script type="text/javascript" src="@Url.Content("~/Scripts/MyScriptTest/TestScript.js")"></script>
}